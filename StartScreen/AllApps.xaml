                Height="64" Width="64" Click="Button_Click" BorderThickness="0,0,0,0"
                FontFamily="Segoe MDL2 Assets" FontSize="24"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}">
